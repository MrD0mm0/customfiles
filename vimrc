" Dracula theme
packadd! dracula
syntax enable
colorscheme dracula
"set background=dark
"highlight LineNr ctermbg=darkgrey
"highlight CursorLineNr ctermbg=grey

set nocompatible

filetype indent plugin on
syntax on

set ignorecase
set smartcase

set backspace=indent,eol,start

set autoindent

set nostartofline

set ruler
set cursorline

set laststatus=2

set confirm

set visualbell
set t_vb=

set mouse=a

set cmdheight=2

set number

set notimeout ttimeout ttimeoutlen=200

set pastetoggle=<F11>
